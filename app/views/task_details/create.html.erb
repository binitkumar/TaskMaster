$(document).ready(function(){
  <% if @task_detail.errors.blank? %>
    $(".task_<%=@task_detail.task.id %>").append( '<%= j render "task_detail", { task_detail: @task_detail } %>' );
    $("input:text").val("");
    $(".textntags-wrapper").show(); 
  <% else %>
    $.jGrowl("<%= j errors_js_view @task_detail %>", {sticky: true, position: "center" , header: "Please fix below things" }); 
  <% end %>
})

